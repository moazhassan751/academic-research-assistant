# API Keys Configuration
# Copy this file to .env and add your API keys

# Google Gemini API Key (required for AI features)
GEMINI_API_KEY=your

# OpenAlex API Email (required for better rate limits)
OPENALEX_EMAIL=your_email@example.com

# Optional API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Configuration
DATABASE_PATH=data/research.db

# Logging Configuration  
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Production Configuration
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your_super_secret_key_for_production_minimum_32_characters_long

# Performance Settings
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Settings
SECURE_HEADERS_ENABLED=true
SESSION_TIMEOUT=3600

# Email Configuration (for CrossRef API)
CROSSREF_EMAIL=your_email@example.com

# ArXiv API Settings
ARXIV_DELAY_SECONDS=3
